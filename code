            if (!jobDesc.trim()) {
                alert('Please enter a job description!');
                return;
            }

            const results = document.getElementById('matchResults');
            results.style.display = 'block';
            results.innerHTML = '<div class="loading"><div class="spinner"></div><p>Matching your resume with job...</p></div>';

            setTimeout(() => {
                results.innerHTML = `
                    <div class="results">
