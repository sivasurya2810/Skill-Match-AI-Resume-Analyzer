    <script>
        let uploadedFiles = {1: null, 2: null, 3: null};

        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            event.target.classList.add('active');
            document.getElementById(tabName + '-tab').classList.add('active');
        }

        function setupUpload(areaId, inputId, fileNameId, fileNum) {
            const area = document.getElementById(areaId);
            const input = document.getElementById(inputId);
            const fileName = document.getElementById(fileNameId);

            area.addEventListener('click', () => input.click());
            
            area.addEventListener('dragover', (e) => {
                e.preventDefault();
                area.classList.add('dragover');
            });
            
            area.addEventListener('dragleave', () => {
                area.classList.remove('dragover');
            });
            
            area.addEventListener('drop', (e) => {
                e.preventDefault();
                area.classList.remove('dragover');
                const file = e.dataTransfer.files[0];
                if (file) {
                    uploadedFiles[fileNum] = file;
                    fileName.textContent = `‚úì ${file.name}`;
                }
            });
            
            input.addEventListener('change', (e) => {
                const file = e.target.files[0];
                if (file) {
                    uploadedFiles[fileNum] = file;
                    fileName.textContent = `‚úì ${file.name}`;
                }
            });
        }

        setupUpload('uploadArea', 'fileInput', 'fileName', 1);
        setupUpload('uploadArea2', 'fileInput2', 'fileName2', 2);
        setupUpload('uploadArea3', 'fileInput3', 'fileName3', 3);

        function analyzeResume() {
            if (!uploadedFiles[1]) {
                alert('Please upload a resume first!');
                return;
            }

            const results = document.getElementById('analyzeResults');
            results.style.display = 'block';
            results.innerHTML = '<div class="loading"><div class="spinner"></div><p>Analyzing your resume...</p></div>';

            setTimeout(() => {
                results.innerHTML = `
                    <div class="results">
                        <h3>üìä Resume Analysis Results</h3>
                        
                        <div class="result-section">
                            <h4>Summary</h4>
                            <p>Experienced software engineer with 5+ years in full-stack development. Strong background in JavaScript, Python, and cloud technologies. Proven track record of delivering scalable applications and leading development teams.</p>
                        </div>
                        
                        <div class="result-section">
                            <h4>ATS Optimization Score</h4>
                            <div class="score">87/100</div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 87%;"></div>
                            </div>
                            <p><span class="badge badge-success">Strong</span> Your resume is well-optimized for ATS systems</p>
                        </div>
                        
                        <div class="result-section">
                            <h4>Key Strengths</h4>
                            <div class="list-item">‚úÖ Strong technical skill set with modern frameworks</div>
                            <div class="list-item">‚úÖ Clear quantifiable achievements</div>
                            <div class="list-item">‚úÖ Well-structured work experience</div>
                            <div class="list-item">‚úÖ Relevant certifications included</div>
                            <div class="list-item">‚úÖ Good balance of technical and soft skills</div>
                        </div>
                        
                        <div class="result-section">
                            <h4>Areas for Improvement</h4>
                            <div class="list-item">‚ö†Ô∏è Add more specific metrics to project outcomes</div>
                            <div class="list-item">‚ö†Ô∏è Include keywords from target job descriptions</div>
                            <div class="list-item">‚ö†Ô∏è Expand on leadership experiences</div>
                            <div class="list-item">‚ö†Ô∏è Add a professional summary section</div>
                            <div class="list-item">‚ö†Ô∏è Consider adding relevant publications or talks</div>
                        </div>
                        
                        <div class="result-section">
                            <h4>Identified Skills</h4>
                            <div>
                                <span class="skill-tag">JavaScript</span>
                                <span class="skill-tag">Python</span>
                                <span class="skill-tag">React</span>
                                <span class="skill-tag">Node.js</span>
                                <span class="skill-tag">AWS</span>
                                <span class="skill-tag">Docker</span>
                                <span class="skill-tag">SQL</span>
                                <span class="skill-tag">Git</span>
                                <span class="skill-tag">Agile</span>
                                <span class="skill-tag">Team Leadership</span>
                            </div>
                        </div>
                    </div>
                `;
            }, 2000);
        }

        function matchJob() {
            if (!uploadedFiles[2]) {
                alert('Please upload a resume first!');
                return;
